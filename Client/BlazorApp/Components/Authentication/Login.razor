@page "/login"
@using BlazorApp.Auth
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavMgr

<PageTitle>Login</PageTitle>

<div class="login-container">
    <h1 class="page-title">Login</h1>

    <AuthorizeView>
        <NotAuthorized>
            <h3>Please log in to your account</h3>

            <div class="form-container">
                <label class="label">Username:</label>
                <input type="text" @bind="userName" class="input-field" />

                <label class="label">Password:</label>
                <input type="password" @bind="password" class="input-field" />

                @if (!string.IsNullOrEmpty(errorLabel))
                {
                    <label class="error-label">@errorLabel</label>
                }

                <button class="primary-button" @onclick="LoginAsync">Log in</button>
            </div>

            <div class="alternative-option">
                <span>Don't have an account?</span>
                <button class="secondary-button" @onclick="NavigateToRegister">Create an account</button>
            </div>
        </NotAuthorized>
        <Authorized>
            <h3>You are already logged in, @context.User.Identity!.Name</h3>
        </Authorized>
    </AuthorizeView>
</div>

@code {
    private string userName;
    private string password;
    private string errorLabel;

    private async Task LoginAsync()
    {
        errorLabel = "";
        try
        {
            await ((SimpleAuthProvider)AuthProvider).LoginAsync(userName, password);
            NavMgr.NavigateTo("/");
        }
        catch (Exception e)
        {
            errorLabel = $"Error: {e.Message}";
        }
    }

    private void NavigateToRegister()
    {
        NavMgr.NavigateTo("/register");
    }
}

