@page "/login"
@using BlazorApp.Auth
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavMgr

<PageTitle>Login</PageTitle>

<div class="login-container">
    <h1 class="page-title">Login</h1>

    <AuthorizeView>
        <NotAuthorized>
            <h3>Please log in to your account</h3>

            <div class="form-container">
                <label for="username" class="form-label">Username</label>
                <input id="username" type="text" @bind="userName" class="input-field" placeholder="Enter your username" />

                <label for="password" class="form-label">Password</label>
                <input id="password" type="password" @bind="password" class="input-field" placeholder="Enter your password" />

                @if (!string.IsNullOrEmpty(errorLabel))
                {
                    <div class="alert alert-danger">@errorLabel</div>
                }

                <button class="primary-button" @onclick="LoginAsync">Log in</button>
            </div>

            <div class="alternative-option">
                <span>Don't have an account?</span>
                <button class="secondary-button" @onclick="NavigateToRegister">Create an account</button>
            </div>
        </NotAuthorized>
        <Authorized>
            <h3>You are already logged in, @context.User.Identity!.Name</h3>
        </Authorized>
    </AuthorizeView>
</div>

@code {
    private string userName;
    private string password;
    private string errorLabel;

    private async Task LoginAsync()
    {
        errorLabel = "";
        try
        {
            await ((SimpleAuthProvider)AuthProvider).LoginAsync(userName, password);
            NavMgr.NavigateTo("/");
        }
        catch (Exception e)
        {
            errorLabel = $"Error: {e.Message}";
        }
    }

    private void NavigateToRegister()
    {
        NavMgr.NavigateTo("/register");
    }
}

<style>
    /* Page layout and structure */
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        height: 100vh;
        padding: 50px 20px;
        background-color: #f8f9fa;
        overflow: hidden;
    }

    .page-title {
        font-size: 2.5rem;
        color: #007bff;
        margin-bottom: 20px;
        font-weight: 600;
    }

    /* Form container and input styling */
    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
        width: 100%;
        max-width: 400px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: white;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 5px;
        text-align: left;
        width: 100%;
        color: #007bff;
    }

    .input-field {
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        font-size: 1rem;
    }

    /* Button styling */
    .primary-button {
        background-color: #007bff;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.1rem;
        width: 100%;
        max-width: 300px;
        margin-top: 10px;
        transition: background-color 0.3s;
    }

    .primary-button:hover {
        background-color: #0056b3;
    }

    /* Alternative option */
    .alternative-option {
        display: flex;
        align-items: center;
        margin-top: 30px;
    }

    .alternative-option span {
        margin-right: 10px;
        color: #555;
    }

    .secondary-button {
        background-color: transparent;
        color: #007bff;
        padding: 8px 16px;
        border: 1px solid #007bff;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
    }

    .secondary-button:hover {
        background-color: #007bff;
        color: white;
    }

    /* Alert message */
    .alert {
        font-size: 0.9rem;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
        margin-top: 10px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #dc3545;
    }
</style>
